# [1,2,3] --> 6 COUNT
count = 0
for number in range(1,4):
	count = count + number
	print(count)

print("")

# write a function that sums all elements of a list and returns them
def sum_list(my_list):
	count = 0
	for number in my_list:
		count = count + number
	return count
#test 
assert 6 == 6
assert sum_list([1, 2 ,3]) == 6
assert sum_list([1, 2, 3, 4]) == 10
print(sum_list([1,2]))
