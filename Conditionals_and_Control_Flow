# CONDITIONALS AND CONTROL FLOW

bob_hours_worked = 40
if bob_hours_worked > 39:
	print("he worked overtime")
print("")

john_homework = True
john_throw_out_grabage = True
if john_homework and john_throw_out_grabage:
	print("John can play XBOX 360")
print("")

if not(john_homework or not (john_throw_out_grabage and john_homework)):
	print("John can play XBOX 360") # FALSE
print("")

# rock paper scissors

human = "rock"
computer = "scissors"
computer = "bananas"
if human == "rock" and computer == "scissors":
	human_score = 1
elif human == "rock" and computer =="bananas":
	computer_score = 0
	human_score = 0
	print("you cant pick up any thing than rock or scissors")
print("")

if human == "rock" or computer == "scissors":
	human_score = 1
	print(False)
elif human == "rock" and computer =="bananas":
	computer_score = 0
	human_score = 0
	print("you cant pick up any thing than rock or scissors")
print("")

if computer != "rock" or computer != "scissors" or computer != "paper":
	computer = "rock"
	print("wrong choice, pick again")

if computer != "rock" and computer != "scissors" and computer != "paper":
	computer = "rock"
	print("wrong choice, pick again")

	# LOOP
